<center>


    <br><br><h3>Report a Problem</h3><br>
    <%=form_for @report do |form| %>
      <div class="container">
      <%= form.text_field :title, placeholder: 'Problem Title', :required => 'required', :class => "form-control" %><br><br>
      <%= form.text_area:description, placeholder: 'Problem Description',rows:6, :required => 'required', :class => "form-control"%><br><br>
      <%= form.text_area :solve, placeholder: 'Suggestions',rows:6, :required => 'required', :class => "form-control" %><br><br>
      <%= form.submit "Report" ,:class => "btn btn-success"%>
      </div>
    <% end %>

</center>




