<center>

  <br><br><br><h3>Book Table</h3><br>
  <%=form_for @book do |form| %>
  <%= form.number_field :number, placeholder: 'Table Number' %><br><br>
  <%= form.number_field :people, placeholder: 'Number of People' %><br><br>
  <%= form.datetime_field :datetime, placeholder: 'Date & Time' %><br><br>
  <%= form.text_field :duration, placeholder: 'Duration (in hours)' %><br><br>
  <%= form.submit "Book" ,:class => "btn btn-success"%>
<% end %>

</center>
