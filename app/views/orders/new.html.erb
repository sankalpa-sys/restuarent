<center>

  <br><br><h3>Order Food</h3><br>
  <%=form_for @order do |form| %>
  <%= form.text_area :item, placeholder: 'Food' %><br><br>
  <%= form.text_field:quantity, placeholder: 'How much',rows:4 %><br><br>
  <%= form.text_area:address, placeholder: 'Delivery Address',rows:4 %><br><br>

  <%= form.submit "Order" ,:class => "btn btn-danger"%>
<% end %>

</center>
